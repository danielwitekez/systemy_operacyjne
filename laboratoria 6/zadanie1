#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sys/ipc.h>
#include <sys/shm.h>

#define SHM_KEY 12345

int main(void) {
    int shmid;
    char *shmaddr;
    char message[] = "To jest prywatny obszar pamięci dzielonej.";

    shmid = shmget(SHM_KEY, sizeof(message), IPC_CREAT | 0666);
    if (shmid == -1) {
        perror("Błąd przy tworzeniu obszaru pamięci dzielonej");
        exit(1);
    }

    shmaddr = (char *)shmat(shmid, NULL, 0);
    if (shmaddr == (char *)-1) {
        perror("Błąd przy przyczepianiu obszaru pamięci dzielonej");
        exit(1);
    }

    strcpy(shmaddr, message);
    printf("Zapisano dane do obszaru pamięci dzielonej.\n");

    printf("Odczytano dane z obszaru pamięci dzielonej: %s\n", shmaddr);

    if (shmdt(shmaddr) == -1) {
        perror("Błąd przy odlaczaniu obszaru pamięci dzielonej");
    }

    if (shmctl(shmid, IPC_RMID, NULL) == -1) {
        perror("Błąd przy usuwaniu obszaru pamięci dzielonej");
    }

    return 0;
}
